<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsightPC.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <!-- Processor Information -->
            <Label Text="Processor Information:" FontAttributes="Bold" />
            <Label Text="Name:" />
            <Label x:Name="ProcessorLabel" />
            <Label Text="Cores:" />
            <Label x:Name="CoresLabel" />
            <Label Text="Clock Speed:" />
            <Label x:Name="ClockSpeedLabel" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
